<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_50"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <!-- Image view showing the image in miniature form -->
    <ImageView
        android:id="@+id/woImageIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="5dip"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/workorder_image"
        android:maxHeight="@dimen/standard_50"
        android:scaleType="fitXY" />

    <!-- Image selection reason text -->
    <TextView
        android:id="@+id/imageReasonTv"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"

        android:layout_weight="0.6"
        android:gravity="center"
        android:textSize="14sp" />
    <!-- Image button to display the reasons for this attachment -->
    <ImageButton android:id="@+id/infoAttachmentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginRight="5dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/imagebuttonbackground"
        android:src="@drawable/ic_info_outline_24dp"
        android:contentDescription="@string/info"/>

    <!-- Image button to remove this attachment -->
    <ImageButton
        android:id="@+id/removeAttachmentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/imagebuttonbackground"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_cancel_24dp" />


</LinearLayout>
