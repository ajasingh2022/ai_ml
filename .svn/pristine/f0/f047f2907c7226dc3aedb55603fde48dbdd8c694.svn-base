<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <!-- Layout to show the warning message and the possible locked by user name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/control_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.45"
            android:text="@string/work_order_already_locked"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lockUserTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.15"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--  Button bar section to go back or retry -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/control_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okButton"
            android:theme="@style/SespFlatButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:text="@string/ok"
            android:visibility="visible" />

        <Button
            android:id="@+id/retryButton"
            android:layout_height="wrap_content"
            android:theme="@style/SespFlatButton"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:text="@string/retry"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
