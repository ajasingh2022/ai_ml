<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_page_header_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:paddingLeft="14dip"
            android:text="@string/trafo_l1_first"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="2dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/manufacturer_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/manufacturer"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/manufacturer_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />


            <TextView
                android:id="@+id/manufacturer_other_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/other"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/manufacturer_other_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="255"
                android:minHeight="25dip"
                android:paddingLeft="8dip"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/type"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/type_other_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/other"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_other_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="255"
                android:inputType="text"
                android:minHeight="25dip"
                android:paddingLeft="8dip"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/manufacturer_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical|left"
                android:text="@string/manufacturer_number"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*">
                <EditText
                    android:id="@+id/manufacturer_number_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:minHeight="25dip"
                    android:paddingLeft="8dip"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:layout_weight="0.7"
                    android:maxLength="20" />

                <ImageButton
                    android:id="@+id/scanIdentifierButton1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/scan"
                    android:scaleType="center"
                    android:background="@null"
                    android:src="@drawable/barcode_scan_icon" />

                <ImageButton
                    android:id="@+id/clearPropValueBtn1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/clear"
                    android:scaleType="center"
                    android:background="@null"
                    android:src="@drawable/ic_cancel_24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/manufacturer_norm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/manufacturer_norm"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/manufacturer_norm_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/property_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:text="@string/property_number"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*">
                <EditText
                    android:id="@+id/property_number_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLength="255"
                    android:inputType="text"
                    android:minHeight="25dip"
                    android:paddingLeft="8dip"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:layout_weight="0.7" />
                <ImageButton
                    android:id="@+id/scanIdentifierButton2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/scan"
                    android:scaleType="center"
                    android:background="@null"
                    android:src="@drawable/barcode_scan_icon" />

                <ImageButton
                    android:id="@+id/clearPropValueBtn2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/clear"
                    android:scaleType="center"
                    android:background="@null"
                    android:src="@drawable/ic_cancel_24dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>