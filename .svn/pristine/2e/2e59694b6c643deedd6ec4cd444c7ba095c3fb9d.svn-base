<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:background="@color/colorAppBackground"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_gravity="top">
	<LinearLayout
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/control_margin">

		<!-- Primary layout to hold all the widgets for this page -->
		<LinearLayout
			android:layout_width="311dp"
			android:layout_height="match_parent"
			android:gravity= "center|start"
			android:orientation="horizontal">

			<!-- New meter header -->
			<TextView
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:gravity="left|start"
				android:text="@string/field_work_finished"
				android:theme="@style/SESPHeading"
				/>

			<!-- Draw underline border -->

			<!--			<Button

				android:layout_height="wrap_content"
				android:theme="@style/SespRaisedButton"
				android:layout_marginTop="@dimen/control_margin"
				android:id="@+id/saveWoButton"
				android:layout_width="match_parent"
				android:text="@string/save"
				android:textSize="@dimen/textSize" />-->


		</LinearLayout>



	<Button
		android:id="@+id/saveWoButton"
		android:layout_width="@dimen/ImageWidth"
		android:layout_height="@dimen/ImageHeight"
		android:background="@drawable/ic_save"
		android:gravity="center_vertical"
		android:layout_gravity="right|end"
		android:layout_marginRight="10dp" />
</LinearLayout>


   
</ScrollView>
