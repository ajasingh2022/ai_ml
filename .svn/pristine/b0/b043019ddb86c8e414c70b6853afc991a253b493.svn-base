<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/screen_padding"
    android:minWidth="@dimen/minimumWidthForFragments"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:gravity="center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUnitType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unit_type"
            android:theme="@style/SESPHeading" />

        <TextView
            android:id="@+id/text_value_UnitType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:inputType="none"
            android:textColor="@color/colorBlack"
            android:minHeight="25dip"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUnitModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/SESPHeading"
            android:text="@string/unit_model" />

        <TextView
            android:id="@+id/text_value_UnitModel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:inputType="none"
            android:textColor="@color/colorBlack"
            android:minHeight="25dip"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGiai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/SESPHeading"
            android:text="@string/giai"
            />

        <TextView
            android:id="@+id/text_value_Giai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:minHeight="25dip"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <CheckBox
            android:theme="@style/SespCheckBox"
            android:id="@+id/checkBoxUnitIsRemoved"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_is_removed"
            />

    </LinearLayout>
</LinearLayout>