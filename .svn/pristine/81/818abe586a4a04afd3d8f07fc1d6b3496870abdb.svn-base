<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unsync_orders_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin"
            android:hint="@string/unsynchronized_orders"
            app:hintTextAppearance="@style/SespHintTextFloatingLabel">

            <EditText
                android:id="@+id/unsync_orders_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SespNormalHintEditText"
                android:enabled="false"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unsync_photo_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:hint="@string/unsynchronized_ph"
            app:hintTextAppearance="@style/SespHintTextFloatingLabel">

            <EditText
                android:id="@+id/unsync_photo_value"
                android:theme="@style/SespNormalHintEditText"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/failed_connections_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:hint="@string/failed_connections"
            app:hintTextAppearance="@style/SespHintTextFloatingLabel">

            <EditText
                android:id="@+id/failed_connections_value"
                android:theme="@style/SespNormalHintEditText"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/incomplete_orders_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:hint="@string/incomplete_orders"
            app:hintTextAppearance="@style/SespHintTextFloatingLabel">

            <EditText
                android:id="@+id/incomplete_orders_value"
                android:theme="@style/SespNormalHintEditText"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateButtonClicked"
        android:text="@string/update"
        android:theme="@style/SespRaisedButton" />

</LinearLayout>