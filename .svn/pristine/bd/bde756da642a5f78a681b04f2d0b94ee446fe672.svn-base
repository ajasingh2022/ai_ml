<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/selOrdtoPrntCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0.2dip"
        android:layout_weight="0.1"
        android:checked="false" />

    <TextView
        android:id="@+id/instCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/selOrdtoPrntCb"
        android:layout_toRightOf="@+id/selOrdtoPrntCb"
        android:layout_weight="0.9"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/instAddressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selOrdtoPrntCb"
        android:layout_toEndOf="@+id/selOrdtoPrntCb"
        android:layout_below="@+id/instCodeTv"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        android:layout_weight="0.9"/>

</RelativeLayout>
