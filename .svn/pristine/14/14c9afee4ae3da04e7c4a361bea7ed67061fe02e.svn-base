        android:id="@+id/unittitleBar"
        layout="@layout/title_unit_id">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sample_border"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/action_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal">

        </RadioGroup>
    </LinearLayout>

    <include
        android:id="@+id/reasonForActionLayout"
        layout="@layout/activity_material_control_select_reason"
        android:visibility="gone" />


