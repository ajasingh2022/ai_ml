<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <include
        layout="@layout/title_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_padding"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="@string/installation_code"
            android:textSize="@dimen/standard_text"
            android:textColor="@color/colorAccentDark"/>

        <EditText
            android:id="@+id/instEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controlHeight"
            android:inputType="textFilter"
            android:maxLines="1"
            android:theme="@style/SespNormalHintEditText"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="@string/model"
            android:textSize="@dimen/standard_text"
            android:textColor="@color/colorAccentDark"/>

        <EditText
            android:id="@+id/modelEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controlHeight"
            android:theme="@style/SespNormalHintEditText"
            android:inputType="textFilter"
            android:maxLines="1"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="@string/address"
            android:textSize="@dimen/standard_text"
            android:textColor="@color/colorAccentDark"/>

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controlHeight"
            android:theme="@style/SespNormalHintEditText"
            android:inputType="textFilter"
            android:maxLines="1"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:text="@string/deadline"
            android:textSize="@dimen/standard_text"
            android:textColor="@color/colorAccentDark"/>

        <EditText
            android:id="@+id/deadlineEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controlHeight"
            android:theme="@style/SespNormalHintEditText"
            android:inputType="textFilter"
            android:maxLines="1"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
        android:orientation="horizontal"
        android:padding="@dimen/screen_padding"
        android:weightSum="2">

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="backButtonClicked"
            android:text="@string/back"
            android:theme="@style/SespRaisedButton" />

        <Button
            android:id="@+id/advSearchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="advSearchButtonClicked"
            android:text="@string/search"
            android:layout_weight="1"
            android:theme="@style/SespRaisedButton" />


    </LinearLayout>


</LinearLayout>
