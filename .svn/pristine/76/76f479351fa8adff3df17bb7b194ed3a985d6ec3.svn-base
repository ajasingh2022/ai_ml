<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/actionbardrawable"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:paddingBottom="15dip"
			android:paddingLeft="12dip"
			android:paddingRight="12dip"
			android:paddingTop="15dip"
			android:text="@string/info"
			android:textSize="16sp"
			android:textStyle="bold" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/errorMsg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:paddingBottom="15dip"
			android:paddingLeft="12dip"
			android:paddingRight="12dip"
			android:paddingTop="15dip"
			android:text="@string/error"
			android:textSize="14sp"
			android:textStyle="bold"
			android:visibility="gone" />

		<LinearLayout
			android:id="@+id/btPrintLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:visibility="gone">

			<TextView
				android:id="@+id/btPrintMsg"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:layout_marginBottom="2dip"
				android:layout_marginLeft="3dip"
				android:layout_marginRight="3dip"
				android:layout_marginTop="2dip"
				android:layout_weight="0.6"
				android:paddingBottom="15dip"
				android:paddingLeft="12dip"
				android:paddingRight="12dip"
				android:paddingTop="15dip"
				android:text="@string/bluetooth_print_ask"
				android:textSize="14sp"
				android:textStyle="bold" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/goWithBtPrint"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:theme="@style/SespFlatButton"
			android:layout_weight="0.2"
			android:text="@string/yes"
			android:visibility="gone" />

		<Button
			android:id="@+id/dontGoWithBtPrint"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:theme="@style/SespFlatButton"
			android:layout_weight="0.2"
			android:text="@string/no"
			android:visibility="gone" />

		<Button
			android:id="@+id/okButtonBtPrint"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:text="@string/ok"
			android:theme="@style/SespFlatButton" />

		<Button
			android:id="@+id/noButtonBtPrint"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:text="@string/no"
			android:theme="@style/SespFlatButton" />

	</LinearLayout>

</LinearLayout>
