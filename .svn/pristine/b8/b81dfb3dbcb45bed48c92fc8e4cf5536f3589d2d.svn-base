<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/unitIdLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAppBackground"
        android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|start"
                android:layout_marginLeft="@dimen/control_margin"
                android:padding="@dimen/screen_padding"
                android:layout_marginTop="@dimen/control_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/unitIdTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/control_margin"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/property_number"
                    android:theme="@style/SESPBlackHeading"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/palletCodeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/control_margin"
                    android:singleLine="true"
                    android:text="@string/pallet_code"
                    android:theme="@style/SESPBlackHeading"/>
            </LinearLayout>

