<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:elevation="10dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
    <TextView
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/existing"
        android:theme="@style/textviewValue" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
    <TextView
        android:singleLine="false"
        android:id="@+id/newUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AHBDJHVDGXV"
        android:theme="@style/textviewValue"
        />
    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
    <TextView
        android:singleLine="false"
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AHBDJHVDGXV"
        android:theme="@style/textviewValue"
         />
    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
    <TextView
        android:singleLine="false"
        android:text="ffffffffffffffffffffffffffffffhj"
        android:id="@+id/onlineVerificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_remove"/>
    </FrameLayout>
</LinearLayout>