<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:background="@color/colorAppBackground"
    android:layout_height="fill_parent" >

    
    <!--<View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
-->
    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:background="@color/colorPrimaryLight">

        <TextView
            android:id="@+id/header1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textSize="@dimen/subtitleTextSize"
            android:text="@string/title_order_type"
            android:textColor="@color/colorAppBackground" />
        
        <ImageView
            android:id="@+id/count"
            android:layout_width="0dip"
            android:layout_height="25dip"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1.5"
            android:contentDescription="@string/count"
            android:src="@drawable/ic_work_order" />

        <ImageView
            android:id="@+id/time_reservation"
            android:layout_width="0dip"
            android:layout_height="25dip"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1.5"
            android:contentDescription="@string/count"
            android:src="@drawable/ic_time_reservation_white" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dip"
        android:fadingEdge="none"
        android:listSelector="@drawable/selector">

    </ListView>

</LinearLayout>