<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:padding="@dimen/screen_padding"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userchoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/endCustomerTxLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SESPHeading"
            android:text="@string/app_load_control_exists" />


        <RadioGroup
            android:id="@+id/loadExistsRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/loadExistsYes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxHeight="100dp"
                android:text="@string/yes"
                android:theme="@style/SespRadioButton" />

            <RadioButton
                android:id="@+id/loadExistsNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/no"
                android:theme="@style/SespRadioButton" />
        </RadioGroup>
    </LinearLayout>


        <!-- Initially hidden view -->
        <LinearLayout
            android:id="@+id/ctlExistsHiddenView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/loadConnectionTxLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SESPHeading"
                android:text="@string/app_load_control_connected"
                android:visibility="visible" />

            <RadioGroup
                android:id="@+id/loadConnectionRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/loadConnectionYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:theme="@style/SespRadioButton"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/loadConnectionNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:theme="@style/SespRadioButton"
                    android:visibility="visible" />
            </RadioGroup>




        </LinearLayout>


    </LinearLayout>



