<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/screen_padding"
    android:minWidth="500dp"
    android:orientation="vertical">



        <TextView
            android:theme="@style/SESPHeading"
            android:id="@+id/page_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meter_constant"
            android:layout_marginTop="@dimen/control_margin"
            android:layout_marginBottom="@dimen/control_margin" />


        <TextView
            android:id="@+id/meter_constant_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_margin"
            android:textSize="@dimen/standard_text"
            android:textColor="@color/grid_state_focused"
            android:layout_marginBottom="@dimen/control_margin"
             />




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="@dimen/control_margin">


        <TextView
            android:theme="@style/SESPHeading"
            android:id="@+id/meter_cont_reg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meter_constant_reg_meter"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.22"
            />

        <!--<Button
            android:id="@+id/btn_ok"
