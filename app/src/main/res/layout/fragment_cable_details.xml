<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/screenHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/control_margin"
        android:paddingTop="@dimen/control_margin"
        android:paddingLeft="@dimen/screen_padding"
        android:background="@color/colorAccentLight"
        android:gravity="start|left"
        android:text="@string/editable_information"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView android:id="@+id/EditDetailList"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dip"
        android:fadingEdge="none"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:theme="@style/SespList">
    </ListView>
</LinearLayout>