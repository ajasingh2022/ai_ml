<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/colorAppBackground"
	android:padding="@dimen/screen_padding"
	android:minWidth="@dimen/minimumWidthForFragments"
    android:orientation="vertical" >


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/control_margin"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:theme="@style/SESPHeading"
			android:text="@string/filename" />

		<TextView
			android:id="@+id/add_attachment_filename_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>
    
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_margin"
		android:theme="@style/SESPHeading"
        android:text="@string/attachment_type"/>
<!--    <Spinner
        android:id="@+id/add_attachment_attachment_type_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>-->


		<!--<Spinner
			android:id="@+id/add_attachment_attachment_type_spinner"
			android:layout_width="match_parent"
			android:layout_height="@dimen/controlHeight"
			android:layout_alignParentEnd="true"
			android:background="@null"
			android:minHeight="0dp"
			android:textSize="16sp" />
-->
	<Spinner
		android:id="@+id/add_attachment_attachment_type_spinner"
		android:layout_marginTop="@dimen/control_margin"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>



	<Button
		android:id="@+id/add_attachment_delete_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_top"
		android:layout_marginBottom="@dimen/control_margin"
		android:theme="@style/SespRaisedButton"
		android:text="@string/delete"/>
    
</LinearLayout>
