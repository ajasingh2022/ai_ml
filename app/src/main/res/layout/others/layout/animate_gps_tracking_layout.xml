<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:paddingBottom="15dip"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="15dip"

            android:text="@string/please_wait"
            android:textColor="@color/colorAppBackground"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    

   	 <LinearLayout android:orientation="vertical"
   	    android:layout_width="fill_parent"
   	    android:layout_height="150dip"
   	    android:background="@color/colorAppBackground">

         <com.capgemini.sesp.ast.android.ui.activity.receiver.GpsAnimationView
             android:id="@+id/gpsView"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:minHeight="20dip"
             android:background="@color/colorPrimaryLight"
             android:paddingBottom="40dp"
             android:paddingLeft="20dp"
             app:exampleColor="#33b5e5"
             app:exampleDimension="24sp"

             app:exampleString="Hello, GpsAnimationView" />
    </LinearLayout>
   	
   	
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_margin"
            android:layout_marginTop="@dimen/control_margin"
            android:text="@string/cancel"
            android:theme="@style/SespFlatButton" />
    </LinearLayout>

</LinearLayout>
