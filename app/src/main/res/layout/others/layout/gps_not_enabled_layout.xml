<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAppBackground"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbardrawable">
        
        <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:paddingLeft="12dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:paddingRight="12dip"
        android:textColor="@color/colorAppBackground"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/info"/>                
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:padding="@dimen/screen_padding"
            android:text="@string/gps_not_enabled"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize" />

        <!--    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:paddingLeft="12dip"
            android:paddingTop="3dip"
            android:paddingBottom="15dip"
            android:paddingRight="12dip"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/enable_gps_info"/>
-->


        <!--                                                                                                    std ui modifications

            <ImageButton
                android:id="@+id/turnGpsNoButton"
                android:background="@drawable/ic_no_24dp"
                android:layout_height="40dp"
                android:layout_width="40dp" />

            <ImageButton
                android:id="@+id/okButton"
                android:background="@drawable/ic_yes_24dp"
                android:layout_height="40dp"
                android:layout_width="40dp"/>
-->

        <Switch
            android:id="@+id/turnGpsYesNoSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="@dimen/screen_padding"
            android:showText="true"
            android:layout_marginTop="@dimen/control_margin"
            android:text="@string/enable_gps_info"
            android:textOff="No"
            android:textOn="Yes"
            android:textSize="@dimen/textSize"
            style="@style/SespYesNoSwitch"
            tools:checked="false" />


    </LinearLayout>

</LinearLayout>
